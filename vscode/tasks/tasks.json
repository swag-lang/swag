{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
        "label": "swag format",
        "type": "process",
        "command": "${env:SWAG_FOLDER}\\swag.exe",
        "args": [
            "format",
            "--file:${file}"
        ],
        "problemMatcher": []
    },
    {
      "label": "build test [fast]",
      "type": "shell",
      "command": "${env:SWAG_FOLDER}\\swag.exe test -w:${workspaceFolder} -o:false",
      "problemMatcher": "$swag",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "build test [full]",
      "type": "shell",
      "command": "${env:SWAG_FOLDER}\\swag.exe test -w:${workspaceFolder}",
      "problemMatcher": "$swag",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "rebuild all",
      "type": "shell",
      "command": "${env:SWAG_FOLDER}\\swag.exe test -w:${workspaceFolder} --rebuild",
      "problemMatcher": "$swag",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
{
  "name": "swag",
  "displayName": "swag",
  "description": "swag language support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:swag"
  ],
  "contributes": {
    "themes": [
			{
				"label": "Swag Dark",
				"uiTheme": "vs-dark",
				"path": "./themes/swag-dark.json"
			}
		],    
    "languages": [
      {
        "id": "swag",
        "aliases": [ "swag" ],
        "extensions": [ ".swg" ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "swag",
        "scopeName": "source",
        "path": "./syntaxes/swag.tmLanguage.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "swag-build",
        "properties": {
          "cmdLine": {
            "type": "string",
            "description": "The command line"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "swag",
        "source": "swag",
        "owner": "swag",
        "fileLocation": [ "absolute" ],
        "pattern": {
          "regexp": "(warning|error):\\s(.*):(\\d+):(\\d+):(\\d+):(\\d+):\\s(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "endLine": 5,
          "endColumn": 6,
          "message": 7
        }
      },
      {
        "name": "swag-background",
        "source": "swag",
        "owner": "swag",
        "fileLocation": [ "absolute" ],
        "pattern": {
          "regexp": "(warning|error):\\s(.*):(\\d+):(\\d+):(\\d+):(\\d+):\\s(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "endLine": 5,
          "endColumn": 6,
          "message": 7
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "File change detected",
          "endsPattern": "Watching for file changes"
        }
      }
    ]
  }
}

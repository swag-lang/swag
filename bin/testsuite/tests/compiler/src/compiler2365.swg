#[Swag.Macro]
public func macro2365(stmt: code)
{
    scope up
    loop 10
    {
        scope down
        #macro
        {
            #mixin `stmt { break = break up; continue = break down; }
        }

        `g += 1
    }
}

#test
{
    g := 0
    macro2365()
    {
        break
    }

    @assert(g == 0)

    macro2365()
    {
        continue
    }

    @assert(g == 10)
}
#global public
#global namespace Math
using Swag

struct Angle
{
    rad: f32
}

impl Angle
{
    #[ConstExpr, Implicit, Inline]
    mtd opAffect(valueRad: f32)
    {
        rad = valueRad
    }

    #[ConstExpr, Implicit, Inline]
    mtd(suffix: string) opAffectSuffix(value: f32)
    {
        #if suffix == "rad"
            rad = value
        #elif suffix == "deg"
            rad = toRadians(value)
        #else
            #assert(false, "invalid angle literal suffix '" ++ suffix ++ "'")
    }

    #[Inline]
    mtdc toDegrees()->f32 => toDegrees(rad)
}
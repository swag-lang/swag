using Core, Pixel

#test
{
    img := try Image.load(imagePath("rgb.tga"))
    try img.save(tmpPath("__rgb.tga"))
    img1 := try Image.load(tmpPath("__rgb.tga"))
    @assert(img.size == img1.size)
    @assert(Memory.compare(img.pixels, img1.pixels, img.size) == 0)
    try File.delete(tmpPath("__rgb.tga"))
}
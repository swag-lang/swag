{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build test [fast]",
      "type": "shell",
      "command": "${env:SWAG_FOLDER}\\swag.exe test -w:${workspaceFolder} -o:false",
      "problemMatcher": {
        "owner": "swag",
        "fileLocation": [ "absolute" ],
        "pattern": {
          "regexp": "(warning|error):\\s(.*):(\\d+):(\\d+):(\\d+):(\\d+):\\s(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "endLine": 5,
          "endColumn": 6,
          "message": 7
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "build test [full]",
      "type": "shell",
      "command": "${env:SWAG_FOLDER}\\swag.exe test -w:${workspaceFolder} --rebuild",
      "problemMatcher": {
        "owner": "swag",
        "fileLocation": [ "absolute" ],
        "pattern": {
          "regexp": "(warning|error):\\s(.*):(\\d+):(\\d+):(\\d+):(\\d+):\\s(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "endLine": 5,
          "endColumn": 6,
          "message": 7
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
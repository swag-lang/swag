{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build test [fast]",
            "type": "shell",
            "command": "f:\\swag\\.out\\swag.exe test -w:f:\\swag\\std --rebuild -o:false",
            "problemMatcher": {
                "owner": "swag",
                "fileLocation": ["absolute"],
                "pattern": {
                  "regexp": "(warning|error):\\s(.*):(\\d+):(\\d+):\\s(.*)$",
                  "severity": 1,
                  "file": 2,
                  "line": 3,
                  "column": 4,
                  "message": 5
                }
            },            
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true,
            }
        },
        {
            "label": "build test [full]",
            "type": "shell",
            "command": "f:\\swag\\.out\\swag.exe test -w:f:\\swag\\std --rebuild",
            "problemMatcher": {
                "owner": "swag",
                "fileLocation": ["absolute"],
                "pattern": {
                  "regexp": "(warning|error):\\s(.*):(\\d+):(\\d+):\\s(.*)$",
                  "severity": 1,
                  "file": 2,
                  "line": 3,
                  "column": 4,
                  "message": 5
                }
            },                 
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true,
            }
        }        
    ]
}